{
  "name": "@niki/notification-server",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit --pretty",
    "clean": "rm -rf .turbo node_modules dist",
    "dev": "pnpm with-env tsx watch src/main/server.ts",
    "fix:lint": "eslint --fix .",
    "with-env": "dotenvx run -f ../../.env --"
  },
  "dependencies": {
    "@niki/domain": "workspace:*",
    "@niki/env": "workspace:*",
    "@niki/logger": "workspace:*",
    "@niki/message-broker": "workspace:*",
    "@niki/utils": "workspace:*",
    "nodemailer": "^7.0.6",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "catalog:",
    "@fastify/cors": "11.0.1",
    "@niki/eslint-config": "workspace:*",
    "@niki/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/nodemailer": "^7.0.1",
    "fastify": "5.3.3",
    "fastify-type-provider-zod": "4.0.2",
    "tsx": "^4.20.5",
    "typescript": "catalog:"
  }
}
