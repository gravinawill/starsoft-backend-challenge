{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
      "@orders/*": ["src/orders/*"],
      "@products/*": ["src/products/*"],
      "@shared/*": ["src/shared/*"],
      "@users/*": ["src/users/*"],
      "@utils/*": ["src/utils/*"]
    },
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ESNext"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "extends": "@niki/typescript-config/nestjs.json"
}
