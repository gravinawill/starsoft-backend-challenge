{
  "name": "@niki/orders-server-nest",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm with-env nest build",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsc --noEmit --pretty",
    "clean": "rm -rf .turbo node_modules dist",
    "fix:lint": "eslint --fix .",
    "migration:generate": "pnpm with-env npx typeorm-ts-node-commonjs migration:generate ./migrations/update-post-table -d ormconfig.ts",
    "migration:run": "pnpm with-env npx typeorm-ts-node-commonjs migration:run -d ormconfig.ts",
    "start": "pnpm with-env nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pnpm with-env node dist/main",
    "ts-node": "ts-node -P ./tsconfig.json",
    "with-env": "dotenvx run -f ../../.env --"
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@niki/env": "workspace:*",
    "@scalar/nestjs-api-reference": "^1.0.2",
    "@types/uuid": "^11.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "5.0.1",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "catalog:",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.30",
    "@dotenvx/dotenvx": "catalog:",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@niki/eslint-config": "workspace:*",
    "@niki/typescript-config": "workspace:*",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "globals": "^16.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
