{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@errors/*": ["./src/domain/errors/*"],
      "@use-cases/*": ["./src/application/use-cases/*"],
      "@repository-contracts/*": ["src/domain/repository-contracts/*"],
      "@infra/*": ["./src/infra/*"],
      "@factories/*": ["./src/main/factories/*"],
      "@controllers/*": ["./src/main/controllers/*"],
      "@routes/*": ["./src/main/routes/*"],
      "@main/*": ["./src/main/*"]
    },
    "types": ["node"],
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist", "build"],
  "extends": "@niki/typescript-config/base.json",
  "include": ["**/*.ts", "src/domain/models/product.model.ts"]
}
