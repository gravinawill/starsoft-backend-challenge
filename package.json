{
  "name": "niki",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:configs": "turbo build --filter=./configs/*",
    "build:packages": "turbo build --filter=./packages/*",
    "check": "turbo check:types && turbo check:lint && pnpm check:format && pnpm check:spelling",
    "check:format": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "check:lint": "turbo run check:lint",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --unique",
    "check:types": "turbo run check:types",
    "clean": "turbo clean && rm -rf .turbo coverage node_modules dist",
    "commit": "czg",
    "db:migrate": "turbo run db:migrate",
    "dev": "turbo run dev",
    "dev:apps": "turbo run dev --filter=./apps/*",
    "fix": "turbo fix:lint && pnpm fix:format",
    "fix:format": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "fix:lint": "turbo run fix:lint",
    "preinstall": "npx --yes only-allow pnpm",
    "scripts:create-many-products": "tsx scripts/create-many-products.ts",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest --coverage --ui",
    "test:unit:ui": "vitest --ui",
    "with-env": "dotenvx run -f .env --"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.*": [
      "prettier --write --ignore-unknown",
      "pnpm check:spelling"
    ]
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cspell/dict-bash": "^4.2.1",
    "@cspell/dict-companies": "^3.2.5",
    "@cspell/dict-en-gb": "5.0.14",
    "@cspell/dict-es-es": "^3.0.8",
    "@cspell/dict-filetypes": "^3.0.13",
    "@cspell/dict-html": "^4.0.12",
    "@cspell/dict-lorem-ipsum": "^4.0.5",
    "@cspell/dict-node": "^5.0.8",
    "@cspell/dict-npm": "^5.2.17",
    "@cspell/dict-redis": "^1.0.7",
    "@cspell/dict-software-terms": "^5.1.8",
    "@cspell/dict-typescript": "^3.2.3",
    "@dotenvx/dotenvx": "catalog:",
    "@niki/eslint-config": "workspace:*",
    "@niki/prettier-config": "workspace:*",
    "@niki/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.1",
    "czg": "^1.12.0",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-prisma": "^5.0.0",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": "24.8.0"
  }
}
